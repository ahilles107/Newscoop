{
    "name":"sourcefabric/newscoop",
    "description":"The open source CMS for news",
    "keywords":["cms", "journalism", "publication"],
    "homepage":"http://www.sourcefabric.org/en/newscoop/",
    "version":"4.0",
    "license":"GPL-3.0",
    "authors":[],
    "require":{
        "php":                              ">=5.3.0",
        "symfony/symfony":                  "2.1.*",
        "symfony/monolog-bundle":           "2.1.*",
        "sensio/distribution-bundle":       "2.1.*",
        "sensio/generator-bundle":          "2.1.*",
        "sensio/framework-extra-bundle":    "2.1.*",
        "doctrine/orm":                     "2.3.*",
        "doctrine/doctrine-bundle":         "1.0.*",
        "zendframework/zendframework1":     "dev-release-1.11",
        "Smarty3":                          "3.0.8",
        "friendsofsymfony/rest-bundle":     "dev-master",
        "behat/behat":                      ">=2.4.0",
        "behat/common-contexts":            "*",
        "kriswallsmith/buzz":               ">=0.7",
        "knplabs/knp-paginator-bundle":     "dev-master",
        "friendsofsymfony/rest-bundle":     "0.9.0",
        "jms/serializer-bundle":            "0.9.0",
        "doctrine/migrations":              "v1.0-ALPHA1",
        "silex/silex":                      "dev-master",
        "taluu/doctrine-orm-provider": "1.0.x-dev"
    },
    "repositories":[
        {
            "type":"package",
            "package":{
                "name":"Smarty3",
                "version":"3.0.8",
                "dist":{
                    "url":"http://www.smarty.net/files/Smarty-3.0.8.zip",
                    "type":"zip"
                },
                "source":{
                    "url":"http://smarty-php.googlecode.com/svn/",
                    "type":"svn",
                    "reference":"tags/Smarty_3_0_8//distribution/"
                }
            }
        }
    ],
    "autoload":{
        "psr-0": {
            "Newscoop": ["gimme/src", "newscoop/library"],
            "Resource": "newscoop/library",
            "Nette": "newscoop/library"
        },
        "classmap":[
            "vendor/Smarty3/libs", 
            "newscoop/classes",
            "newscoop/template_engine",
            "newscoop/plugins"
        ]
    },
    "include-path": [
        "newscoop/library",
        "newscoop/include",
        "dependencies/include"
    ],
    "scripts": {
        "post-install-cmd": [
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap"
        ],
        "post-update-cmd": [
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap"
        ]
    },
    "minimum-stability": "dev",
    "config": {
        "bin-dir": "vendor/bin"
    },
    "extra": {
        "symfony-app-dir": "gimme/app",
        "symfony-web-dir": "gimme/web"
    }
}
